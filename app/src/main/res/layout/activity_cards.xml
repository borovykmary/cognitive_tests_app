<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CardsActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".cardsTest.CardsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

     <ImageView
        android:id="@+id/imageView5"
        android:layout_width="535dp"
        android:layout_height="693dp"
        android:layout_marginBottom="276dp"
        android:rotation="-47"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bg_gradient" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/card_background" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="48dp"
        android:layout_height="4dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:srcCompat="@drawable/indicator" />

    <ImageView
        android:id="@+id/SDMTBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_arrow" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/clock_background" />


    <ImageView
        android:id="@+id/imageViewAnswer"
        android:layout_width="83dp"
        android:layout_height="97dp"
        android:layout_marginBottom="302dp"
        android:src="@drawable/card_blue_1_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageViewTarget1"
        android:layout_width="83dp"
        android:layout_height="97dp"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="458dp"
        android:src="@drawable/card_blue_4_star"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageViewTarget2"
        android:layout_width="83dp"
        android:layout_height="97dp"
        android:layout_marginStart="11dp"
        android:src="@drawable/card_green_1_triangle"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewTarget1"
        app:layout_constraintStart_toEndOf="@+id/imageViewTarget1"
        app:layout_constraintTop_toTopOf="@+id/imageViewTarget1"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageViewTarget3"
        android:layout_width="83dp"
        android:layout_height="97dp"
        android:layout_marginStart="11dp"
        android:src="@drawable/card_red_2_square"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewTarget2"
        app:layout_constraintStart_toEndOf="@+id/imageViewTarget2"
        app:layout_constraintTop_toTopOf="@+id/imageViewTarget2"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageViewTarget4"
        android:layout_width="83dp"
        android:layout_height="97dp"
        android:layout_marginStart="11dp"
        android:src="@drawable/card_yellow_3_circle"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewTarget3"
        app:layout_constraintStart_toEndOf="@+id/imageViewTarget3"
        app:layout_constraintTop_toTopOf="@+id/imageViewTarget3" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>