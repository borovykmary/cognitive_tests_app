<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MiniAceTest1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/poppins_regular"
            android:text="What is day, date, month, year?"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextDay"
            android:layout_width="326dp"
            android:layout_height="45dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/fancy_edittext"

            android:drawablePadding="8dp"
            android:ems="10"
            android:fontFamily="@font/inter_regular"

            android:hint="Day"
            android:inputType="text"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="@color/text_gray"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView16" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="326dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"

            android:background="@drawable/fancy_edittext"
            android:drawablePadding="8dp"
            android:ems="10"

            android:fontFamily="@font/inter_regular"
            android:hint="Date"
            android:inputType="text"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="@color/text_gray"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="@+id/editTextDay"
            app:layout_constraintStart_toStartOf="@+id/editTextDay"
            app:layout_constraintTop_toBottomOf="@+id/editTextDay" />

        <EditText
            android:id="@+id/editTextMonth"
            android:layout_width="326dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"

            android:background="@drawable/fancy_edittext"
            android:drawablePadding="8dp"
            android:ems="10"

            android:fontFamily="@font/inter_regular"
            android:hint="Month"
            android:inputType="text"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="@color/text_gray"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="@+id/editTextDate"
            app:layout_constraintStart_toStartOf="@+id/editTextDate"
            app:layout_constraintTop_toBottomOf="@+id/editTextDate" />

        <EditText
            android:id="@+id/editTextYear"
            android:layout_width="326dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"

            android:background="@drawable/fancy_edittext"
            android:drawablePadding="8dp"
            android:ems="10"

            android:fontFamily="@font/inter_regular"
            android:hint="Year"
            android:inputType="text"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="@color/text_gray"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="@+id/editTextMonth"
            app:layout_constraintStart_toStartOf="@+id/editTextMonth"
            app:layout_constraintTop_toBottomOf="@+id/editTextMonth" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>