<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MiniAceTest2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/poppins_regular"
            android:text="You can listen only 3 times. Be careful"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="326dp"
            android:layout_height="45dp"

            android:layout_marginTop="25dp"
            android:background="@drawable/fancy_edittext"
            android:drawablePadding="8dp"

            android:ems="10"
            android:fontFamily="@font/inter_regular"
            android:hint="Name"
            android:inputType="text"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="@color/text_gray"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/play_button" />

        <EditText
            android:id="@+id/editTextAddress"
            android:layout_width="326dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"

            android:background="@drawable/fancy_edittext"
            android:drawablePadding="8dp"
            android:ems="10"

            android:fontFamily="@font/inter_regular"
            android:hint="Address"
            android:inputType="text"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="@color/text_gray"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="@+id/editTextName"
            app:layout_constraintStart_toStartOf="@+id/editTextName"
            app:layout_constraintTop_toBottomOf="@+id/editTextName" />

        <EditText
            android:id="@+id/editTextName1"
            android:layout_width="326dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"

            android:background="@drawable/fancy_edittext"
            android:drawablePadding="8dp"
            android:ems="10"

            android:fontFamily="@font/inter_regular"
            android:hint="Name"
            android:inputType="text"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="@color/text_gray"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="@+id/editTextAddress"
            app:layout_constraintStart_toStartOf="@+id/editTextAddress"
            app:layout_constraintTop_toBottomOf="@+id/editTextAddress" />

        <EditText
            android:id="@+id/editTextAddress1"
            android:layout_width="326dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"

            android:background="@drawable/fancy_edittext"
            android:drawablePadding="8dp"
            android:ems="10"

            android:fontFamily="@font/inter_regular"
            android:hint="Address"
            android:inputType="text"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="@color/text_gray"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="@+id/editTextName1"
            app:layout_constraintStart_toStartOf="@+id/editTextName1"
            app:layout_constraintTop_toBottomOf="@+id/editTextName1" />

        <ImageView
            android:id="@+id/play_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:src="@drawable/player"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView16" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>