<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MiniAceTest5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Now tell me what you remember about that name and address we were repeating at the beginning."
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextNameRepeat"
            android:layout_width="326dp"
            android:layout_height="45dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/fancy_edittext"

            android:drawablePadding="8dp"
            android:ems="10"
            android:fontFamily="@font/inter_regular"

            android:hint="Name"
            android:inputType="text"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="@color/text_gray"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView16" />

        <EditText
            android:id="@+id/editTextAddressRepeat"
            android:layout_width="326dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"

            android:background="@drawable/fancy_edittext"
            android:drawablePadding="8dp"
            android:ems="10"

            android:fontFamily="@font/inter_regular"
            android:hint="Address"
            android:inputType="text"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="@color/text_gray"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="@+id/editTextNameRepeat"
            app:layout_constraintStart_toStartOf="@+id/editTextNameRepeat"
            app:layout_constraintTop_toBottomOf="@+id/editTextNameRepeat" />

        <EditText
            android:id="@+id/editTextName1Repeat"
            android:layout_width="326dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"

            android:background="@drawable/fancy_edittext"
            android:drawablePadding="8dp"
            android:ems="10"

            android:fontFamily="@font/inter_regular"
            android:hint="Name"
            android:inputType="text"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="@color/text_gray"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="@+id/editTextAddressRepeat"
            app:layout_constraintStart_toStartOf="@+id/editTextAddressRepeat"
            app:layout_constraintTop_toBottomOf="@+id/editTextAddressRepeat" />

        <EditText
            android:id="@+id/editTextAddress1Repeat"
            android:layout_width="326dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"

            android:background="@drawable/fancy_edittext"
            android:drawablePadding="8dp"
            android:ems="10"

            android:fontFamily="@font/inter_regular"
            android:hint="Address"
            android:inputType="text"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="@color/text_gray"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="@+id/editTextName1Repeat"
            app:layout_constraintStart_toStartOf="@+id/editTextName1Repeat"
            app:layout_constraintTop_toBottomOf="@+id/editTextName1Repeat" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>