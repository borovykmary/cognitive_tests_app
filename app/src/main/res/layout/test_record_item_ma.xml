<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bg3"
            android:layout_width="375dp"
            android:layout_height="134dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:src="@drawable/bg_test_item"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="83dp"
            android:layout_height="73dp"
            app:layout_constraintBottom_toBottomOf="@+id/bg3"
            app:layout_constraintEnd_toEndOf="@+id/bg3"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintStart_toStartOf="@+id/bg3"
            app:layout_constraintTop_toTopOf="@+id/bg3"
            app:srcCompat="@drawable/faq" />

        <TextView
            android:id="@+id/TestResultMA"
            android:layout_width="224dp"
            android:layout_height="52dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Mini Ace Test Results"
            android:textColor="@color/green_haki"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/bg3"
            app:layout_constraintEnd_toEndOf="@+id/bg3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView7"
            app:layout_constraintTop_toTopOf="@+id/bg3"
            app:layout_constraintVertical_bias="0.379" />

        <TextView
            android:id="@+id/seeDetailsButton"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:fontFamily="@font/poppins_bold"
            android:text="SEE DETAILS"
            android:textColor="@color/green_900"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/bg3"
            app:layout_constraintEnd_toEndOf="@+id/TestResultMA"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/TestResultMA"
            app:layout_constraintTop_toBottomOf="@+id/TestResultMA"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/simpleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/time_icon"
            android:text=" 15.04.2024"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/green_900"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/bg3"
            app:layout_constraintEnd_toStartOf="@+id/seeDetailsButton"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView7"
            app:layout_constraintTop_toBottomOf="@+id/TestResultMA"
            app:layout_constraintVertical_bias="0.031" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>